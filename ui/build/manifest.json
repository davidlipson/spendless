{
  "short_name": "Spendlo",
  "name": "Spendlo",
  "version": "1.1",
  "manifest_version": 3,
  "action": {
    "default_title": "Spendlo",
    "default_popup": "index.html"
  },
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": false,
      "js": [
        "content.js"
      ],
      "css": [
        "extension.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "identity",
    "identity.email",
    "tabs",
    "webNavigation",
    "management"
  ]
}