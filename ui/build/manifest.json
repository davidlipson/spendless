{
  "short_name": "SpendLess",
  "name": "SpendLess",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "SpendLess",
    "default_popup": "index.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "all_frames": true,
    "js":      ["content.js"],
    "css": ["extension.css"]
  }],
  "background": {     
    "persistent": false,
    "scripts": [      
      "background.js"
    ]   
  },
  "permissions": [
    "identity", "identity.email", "activeTab", "tabs", "webNavigation"
  ]
}
